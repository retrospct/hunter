# Required environment variables for Job Monitor
# Copy this file to .env and fill in your actual values

# Browserbase configuration (required for Stagehand)
BROWSERBASE_API_KEY=your_browserbase_api_key_here
BROWSERBASE_PROJECT_ID=your_browserbase_project_id_here

# Email configuration for notifications
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_app_password
NOTIFICATION_EMAIL=recipient@example.com

# Optional: Specify which sites to monitor (comma-separated)
# Leave empty to monitor all configured sites
ENABLED_SITES=xAI,OpenAI,Anthropic,Meta AI

# Optional: Enable detailed job extraction (slower but more informative)
FETCH_JOB_DETAILS=false

# Optional: Debug mode for more verbose logging
DEBUG=false

# Future database configuration (for when database integration is added)
# DATABASE_URL=postgresql://username:password@localhost:5432/jobhunter

# Future API configuration (for when API server is added)
# API_PORT=8000
# API_HOST=0.0.0.0
# CORS_ORIGINS=http://localhost:3000

# Future monitoring configuration
# LOG_LEVEL=info
# MONITORING_INTERVAL_MINUTES=60
# ENABLE_METRICS=true

# Future feature flags
